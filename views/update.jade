extends ./layout

block body
  .container
    form.form-signin(action='/update', method='post')      
      h2(for='inputEmail') Your Email address : #{req.session.userEmail}
      label.sr-only(for='inputPassword') Update Password
      input(type="hidden" name="email" value="#{req.session.userEmail}")
      input#inputPassword.form-control(type='password', name='password', placeholder='', required='')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Submit

